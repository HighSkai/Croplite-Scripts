			send action bar "&a[+%(12*{miningmultiplier::%player's uuid%})% exp (%{miningxp::%player's uuid%}%/%{miningxpreq::%player's uuid%}%)]" to player
	else if "%region at player%" is equal to "area12 in world world and global in world world":
		if at least one of:
			event-block is pink_petals
			event-block is orange_tulip
		then:
			add 25*{miningmultiplier::%player's uuid%} to {miningxp::%player's uuid%}
			send action bar "&a[+%(25*{miningmultiplier::%player's uuid%})% exp (%{miningxp::%player's uuid%}%/%{miningxpreq::%player's uuid%}%)]" to player
		else if event-block is dead_bush:
			add 12.5*{miningmultiplier::%player's uuid%} to {miningxp::%player's uuid%}
			send action bar "&a[+%(12.5*{miningmultiplier::%player's uuid%})% exp (%{miningxp::%player's uuid%}%/%{miningxpreq::%player's uuid%}%)]" to player
on break:
	if at least one of:
		event-block is not rose_bush
		event-block is not poppy
		event-block is not red_tulip
		event-block is not red mushroom
		event-block is not brown mushroom
		event-block is not sunflower
		event-block is not azure_bluet
		event-block is not pink tulip
		event-block is not orange tulip
		event-block is not white tulip
		event-block is not allium
		event-block is not blue orchid
		event-block is not dandelion
		event-block is not fern
		event-block is not large fern
		event-block is not short grass
		event-block is not tall grass
	then:
		if player is not an operator:
			cancel event
			send "&c&lYou cannot break this block!" to player
			
command /rankup <player> <text>:
	permission: *
	trigger:
		if arg-2 = "vip":
			set {_multip} to 1.1 
		else if arg-2 = "vip+":
			set {_multip} to 1.1
		else if arg-2 = "mvp":
			set {_multip} to 1.2 
		else if arg-2 = "mvp+":
			set {_multip} to 1.2
		else if arg-2 = "elite":
			set {_multip} to 1.3
		else if arg-2 = "none":
			set {_multip} to 0.0
			
		set {rankmultip::%arg-1's uuid%} to {_multip}
		
command /area <player>:
	permission: *
	trigger:
		broadcast "%region at arg-1%"