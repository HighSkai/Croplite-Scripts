command /xpmultiplier <text> <number>:
	permission: *
	trigger:
		if arg-1 is "add":
			add arg-2 to {miningmultiplier::%player's uuid%}
		else if arg-1 is "subtract":
			subtract arg-2 from {miningmultiplier::%player's uuid%}
			
