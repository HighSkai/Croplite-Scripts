command /totalcropsbroken:
	trigger:
		send "%{totalcropsbroken::%player's uuid%}%" to player
		
on break:
	if at least one of:
		event-block is short grass
		event-block is tall grass
	then:
		add 1*{miningmultiplier::%player's uuid%} to {miningxp::%player's uuid%}
		send action bar "&a[+%(1*{miningmultiplier::%player's uuid%})% exp (%{miningxp::%player's uuid%}%/%{miningxpreq::%player's uuid%}%)]" to player
		
on break:
	if "%region at player%" is equal to "global in world world and area2 in world world":
		if at least one of:
			event-block is fern
			event-block is large fern
		then:
			add 2*{miningmultiplier::%player's uuid%} to {miningxp::%player's uuid%}
			send action bar "&a[+%(2*{miningmultiplier::%player's uuid%})% exp (%{miningxp::%player's uuid%}%/%{miningxpreq::%player's uuid%}%)]" to player
	else if "%region at player%" is equal to "area3 in world world and global in world world":
		if at least one of:
			event-block is dandelion
