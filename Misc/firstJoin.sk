on first join:
	set join message to "&d&l(Croplite) &8Â» &a%player% &7has joined the server for the first time!"
	launch flickering trailing burst firework colored lime at player's location
	set {_item} to wooden hoe
	set name of {_item} to "&6Basic Wooden Scythe [T1]"
	set line 1 of lore of {_item} to "Wheat Harvested: 0"
	set line 2 of lore of {_item} to "Next Tier: 1000"
	give 1 of {_item} to the player
	send "&aDo /tutorial to learn how to play!" to player
	# Skills
	set {skillpoints::%player's uuid%} to 0
	set {mslevel::%player's uuid%} to 0
	set {shlevel::%player's uuid%} to 0
	set {falevel::%player's uuid%} to 0
	set {crlevel::%player's uuid%} to 0
	set {xplevel::%player's uuid%} to 0
	set {amountofskills::%player's uuid%} to 0
	set {fireballupgradespeed::%player's uuid%} to 0.1
	set {fireballshoothoe::%player's uuid%} to false
	set {cropreapamount::%player's uuid%} to 0
	set {cropreapskill::%player's uuid%} to false
	# Mobs
	set {mobspawnchance::%player's uuid%} to 0.5
	set {mobxp::%player's uuid%} to 0
	set {dailymobkills::%player's uuid%} to 0
	# Crops
	set {cropmaterial::%player's uuid%} to 0
	set {cropbag::%player's uuid%} to 500
	set {cropyieldmultiplier::%player's uuid%} to 1
	set {miningmultiplier::%player's uuid%} to 1
	set {miningxp::%player's uuid%} to 0
	set {mininglevel::%player's uuid%} to 0
	set {miningxpreq::%player's uuid%} to 500
	set {areaselltoggle::%player's uuid%} to false
	set {cropmenuselltoggle::%player's uuid%} to false
	set {cropcash::%player's uuid%} to 0
	set {brokencrops::%player's uuid%} to 0
	set {dailycropsbroken::%player's uuid%} to 0
	set {totalcropsbroken::%player's uuid%} to 0
	# Miscellaneous
	set {rankmultip::%player's uuid%} to 0
	set player's walking speed to 0.2
	set {playerwalkspeed::%player's uuid%} to 1.00
	set {bag1upgrade::%player's uuid%} to false
	set {tutorialstatus::%player's uuid%} to false
	set {nonothin::%player's uuid%} to false
	set {areaunlocked::%player's uuid%} to 1
	set {eke1::%player's uuid%} to false
	set {eke2::%player's uuid%} to false
	set {eke3::%player's uuid%} to false
	set {eke4::%player's uuid%} to false
